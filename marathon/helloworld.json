{
    "id": "helloworld",
    "groups" : [
	{
	    "id" : "helloworld",
	    "apps" : [
		{
		    "id" : "helloworld-v1",
		    "container": {
			"type": "DOCKER",
			"docker": {
			    "image": "amalgam8/a8-examples-helloworld-sidecar:v1",
			    "network": "BRIDGE",
			    "portMappings": [
				{
				    "containerPort": 5000,
				    "hostPort": 0,
				    "protocol" : "tcp"
				}
			    ]
			}
		    },
		    "cmd" : "a8sidecar --proxy=false --log=false --endpoint_host=${HOST} --endpoint_port=${PORT_5000} --supervise python -u app.py",
		    "env": {
                "A8_REGISTRY_URL": "http://__REPLACEME__:31300",
			    "A8_REGISTRY_TOKEN" : "local",
			    "A8_SERVICE" : "helloworld:v1"
		    },
		    "instances": 2,
		    "cpus": 0.1,
		    "mem": 128
		},
		{
		    "id" : "helloworld-v2",
		    "container": {
			"type": "DOCKER",
			"docker": {
			    "image": "amalgam8/a8-examples-helloworld-sidecar:v2",
			    "network": "BRIDGE",
			    "portMappings": [
				{
				    "containerPort": 5000,
				    "hostPort": 0,
				    "protocol" : "tcp"
				}
			    ]
			}
		    },
		    "cmd" : "a8sidecar --proxy=false --log=false --endpoint_host=${HOST} --endpoint_port=${PORT_5000} --supervise python -u app.py",
		    "env": {
                "A8_REGISTRY_URL": "http://__REPLACEME__:31300",
			    "A8_REGISTRY_TOKEN" : "local",
			    "A8_SERVICE" : "helloworld:v2"
		    },
		    "instances": 2,
		    "cpus": 0.1,
		    "mem": 128
		}
	    ]
	}
    ]
}
